        const audioFiles = [
            "audio/きらきら輝く1.mp3",
            "audio/弓矢を放つ.mp3",
            "audio/毒魔法2.mp3"
        ];
        const randomFile = audioFiles[Math.floor(Math.random() * audioFiles.length)];
        window.location.href = randomFile; // ランダムな音声ファイルにリダイレクト
    </script>
